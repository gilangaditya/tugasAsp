<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Absensi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    <style>
        .mynav_navbar{
            overflow: hidden;
        }
        .mynav_navbar a{
            float: left;
            font-size: 16px;
            color: #ffc500;
            text-align: justify;
            padding: 14px 16px;
            text-decoration: none;
        }
        .mynav_dropdown{
            float: left;
            overflow: hidden;
        }
        .mynav_dropdown .mynav_dropbtn{
            font-size: 16px;
            border: none;
            outline: none;
            padding: 14px 16px;
            background-color: inherit;
            font-family: inherit;
            margin: 0;
        }
        .mynav_navbar a:hover, .mynav_dropdown:hover .mynav_dropbtn{
            background-color: blue;
        }
        .mynav_dropdown-content{
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-height: 160px;
            box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 2);
            z-index: 1;
        }
        .mynav_dropdown-content a{
            float: none;
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            text-align: left;
        }
        .mynav_dropdown-content a:hover{
            background-color: #ddd;

        }
        .mynav_dropdown:hover .mynav_dropdown-content{
            display: block;
        }
    </style>
</head>
<body>
    <header>
        <nav id="nav" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Absensi</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reserve">
                    <div class="navbar-nav flex-grow-1">
                        <div class="mynav_navbar">
                            <a  class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a> 
                        </div>
                        <div class="mynav_navbar">
                            <a  class="nav-link text-dark" asp-area="" asp-page="/latihanbootstrap">My Portofolio</a> 
                        </div>
                        <div class="mynav_dropdown">
                            <button class="mynav_dropbtn">
                                Master
                                <i class="fa fa-caret-down"></i>
                            </button>
                            <div class="mynav_dropdown-content">
                                <a href="/Mahasiswa" class="nav-link text-dark">Mahasiswa</a>
                                <a href="/Dosen" class="nav-link text-dark">Dosen</a>
                            </div>
                        </div>
                        <div class="mynav_navbar">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Rekap">Rekap</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Absensi - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
